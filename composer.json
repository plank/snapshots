{
    "name": "plank/snapshots",
    "description": "Snapshot Laravel Models",
    "keywords": [
        "plank",
        "laravel",
        "snapshot",
        "version",
        "history"
    ],
    "homepage": "https://github.com/plank/snapshots",
    "license": "MIT",
    "authors": [
        {
            "name": "Kurt Friars",
            "email": "kurt@plank.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "^3.6",
        "illuminate/contracts": "^11",
        "plank/laravel-hush": "^11.1",
        "plank/laravel-schema-events": "^11.1",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.1.1",
        "orchestra/testbench": "^9.0.0",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.5",
        "pestphp/pest-plugin-laravel": "^2.2.0"
    },
    "autoload": {
        "psr-4": {
            "Plank\\Snapshots\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plank\\Snapshots\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Plank\\Snapshots\\SnapshotServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
